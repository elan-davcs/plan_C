<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="plan_contenedores.Views.BuqueForm_4"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VM="clr-namespace:plan_contenedores.ViewModels"
    xmlns:local="clr-namespace:plan_contenedores.Views"
    Title="Formulario Buque"
    Shell.BackgroundColor="#239B56"
    Shell.TitleColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="home"
            IconImageSource="home.png"
            Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.BindingContext>
        <VM:SelloViewModels />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label
            Margin="0,10,0,0"
            Padding="15"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="Desembarque"
            TextColor="Black" />
        <StackLayout Orientation="Horizontal">
            <Label
                Margin="15,0,5,0"
                FontSize="18"
                Text="Buque: "
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                x:Name="txt_buque"
                FontSize="18"
                Text="Aqui estará el nombre del buque"
                TextColor="Black"
                VerticalOptions="Center" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label
                Margin="15,0,5,0"
                FontSize="18"
                Text="Contenedor: "
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                x:Name="txt_contenedor"
                FontSize="18"
                Text="Aqui estará el nombre del contenedor"
                TextColor="Black"
                VerticalOptions="Center" />
        </StackLayout>
        <StackLayout Margin="10,20,0,0" Orientation="Vertical">

            <Label
                FontSize="16"
                Text="Tipo de sello:"
                TextColor="Black" />
            <Picker
                x:Name="tipoSelloPicker"
                Title="Selecionar tipo de sello"
                FontSize="16"
                SelectedIndex="0" />
        </StackLayout>
        <StackLayout Margin="10,20,0,0" Orientation="Vertical">

            <Label
                FontSize="16"
                Text="Sello:"
                TextColor="Black" />
            <Entry
                x:Name="nombreSelloEntry"
                FontSize="16"
                Keyboard="Email"
                MaxLength="15"
                Placeholder="Ingresar sello"
                VerticalOptions="Center" />
        </StackLayout>
        <StackLayout
            Margin="0,10,0,0"
            Padding="10"
            Orientation="Horizontal">
            <Button
                x:Name="btnAgregar"
                BackgroundColor="Blue"
                Clicked="AgregarSello_Clicked"
                CornerRadius="20"
                FontSize="18"
                HorizontalOptions="StartAndExpand"
                Text="Agregar"
                WidthRequest="130" />
            <Button
                BackgroundColor="#4F74FF"
                Clicked="BuqueForm_5_clicked"
                CornerRadius="20"
                FontSize="18"
                HorizontalOptions="EndAndExpand"
                Text="Siguiente"
                WidthRequest="130" />
        </StackLayout>
        <!--  TableView para mostrar los resultados  -->
        <ScrollView>
            <StackLayout Margin="0,10,0,0" HeightRequest="210" x:Name="stackSellos" IsVisible="false">
                <ListView x:Name="sellosListView">
                    <ListView.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Tipo Sello"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Nombre Sello"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Eliminar"
                                VerticalOptions="Center" />
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        HorizontalOptions="CenterAndExpand"
                                        Text="{Binding TipoSello}"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="1"
                                        HorizontalOptions="CenterAndExpand"
                                        Text="{Binding NombreSello}"
                                        VerticalOptions="Center" />
                                    <ImageButton
                                        Grid.Column="2"
                                        Padding="90"
                                        Command="{Binding Path=BindingContext.EliminarSelloCommand, Source={x:Reference sellosListView}}"
                                        CommandParameter="{Binding .}"
                                        HorizontalOptions="Center"
                                        Source="borrarsello.png"
                                        VerticalOptions="Center" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
        <StackLayout Orientation="Horizontal" />
    </VerticalStackLayout>
</ContentPage>