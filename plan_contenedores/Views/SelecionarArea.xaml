<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="plan_contenedores.Views.SelecionarArea"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:plan_contenedores.Views"
    Title="Seleccionar Area"
    Shell.BackgroundColor="#239B56"
    Shell.TitleColor="White">
    <StackLayout>

        <ScrollView>
            <VerticalStackLayout VerticalOptions="CenterAndExpand">
                <Button
                    Margin="0,300,0,0"
                    BackgroundColor="#4F74FF"
                    Clicked="GaritasForm_1_clicked"
                    CornerRadius="20"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Garitas"
                    WidthRequest="250" />
                <Button
                    Margin="0,10,0,0"
                    BackgroundColor="#4F74FF"
                    Clicked="BuqueForm_1_clicked"
                    CornerRadius="20"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Buque"
                    WidthRequest="250" />
            </VerticalStackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>